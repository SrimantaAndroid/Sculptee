    </LinearLayout>
    <TextView android:layout_width="match_parent"
              android:layout_height="@dimen/_1sdp"
    android:background="@color/carthadercolorcode"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_3sdp"/>
</LinearLayout>