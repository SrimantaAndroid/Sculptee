<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_170sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/alertbg">
        <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="@dimen/_10sdp"></TextView>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_14sdp"
                android:orientation="horizontal">
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                        android:id="@+id/btnrateus"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentBottom="true"

                        android:text="Rate Us"

                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        android:background="@drawable/rectangle_alertbutton_bg_"
                        android:layout_centerHorizontal="true"></Button>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <Button
                        android:id="@+id/btn_remindermelater"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentBottom="true"

                        android:text="Reminder me later"

                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        android:background="@drawable/rectangle_alertbutton_bg_"
                        android:layout_centerHorizontal="true"></Button>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <Button
                        android:id="@+id/btn_nothanks"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentBottom="true"

                        android:text="No Thanks"

                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        android:background="@drawable/rectangle_alertbutton_bg_"
                        android:layout_centerHorizontal="true"></Button>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>