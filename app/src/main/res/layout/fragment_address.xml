<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.address.AddressFragment">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
    <RelativeLayout
            android:id="@+id/rl_addaddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@color/darkgrey">

        <ImageView
                android:id="@+id/imgadd"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/add_address">
        </ImageView>
        <TextView
                android:id="@+id/tv_add_new_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/imgadd"
                android:layout_marginLeft="@dimen/_15sdp"
                android:gravity="center_vertical"
                android:hint="Add Address"
                android:textSize="@dimen/_14sdp"></TextView>

    </RelativeLayout>

    <LinearLayout
            android:id="@+id/ll_add_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_below="@+id/rl_addaddress"
            android:background="@color/lightt_grey">

        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/_12sdp"
              android:layout_marginRight="@dimen/_12sdp"
              android:layout_marginTop="@dimen/_15sdp"
                android:orientation="vertical"

              android:layout_marginBottom="@dimen/_10sdp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_7sdp"
                         android:layout_weight="1">
                    <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/star"
                            android:drawablePadding="@dimen/_2sdp"
                            android:text="Address Type"
                            android:textColor="@color/desc_selected_bg"
                            android:textSize="@dimen/_12sdp" />

                    <TextView
                            android:id="@+id/tv_addresstype"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_below="@+id/tv_type"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:background="@drawable/rectangle_feild_white"
                            android:padding="@dimen/_5sdp"
                            android:text="Select type"
                            android:gravity="center_vertical"
                            android:drawableRight="@drawable/dwn_arrow"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />

                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1">
                    <TextView
                            android:id="@+id/tv_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Company Name"
                            android:textColor="@color/desc_selected_bg"
                            android:textSize="@dimen/_12sdp" />

                    <EditText
                            android:id="@+id/et_companyname"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_below="@+id/tv_company"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/rectangle_feild_white"
                            android:padding="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1">

                    <TextView
                            android:id="@+id/tv_frist_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/star"
                            android:drawablePadding="@dimen/_2sdp"
                            android:text="@string/frist_name"
                            android:textColor="@color/desc_selected_bg"
                            android:textSize="@dimen/_12sdp" />

                    <EditText
                            android:id="@+id/et_fristname"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_below="@+id/tv_frist_name"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/rectangle_feild_white"
                            android:padding="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1">

                    <TextView
                            android:id="@+id/tv_last_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/star"
                            android:drawablePadding="@dimen/_2sdp"
                            android:text="@string/last_name"
                            android:textColor="@color/desc_selected_bg"
                            android:textSize="@dimen/_12sdp" />

                    <EditText
                            android:id="@+id/et_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_below="@+id/tv_last_name"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/rectangle_feild_white"
                            android:padding="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                </RelativeLayout>


            </LinearLayout>

            <TextView
                    android:id="@+id/tv_street_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawableRight="@drawable/star"
                    android:drawablePadding="@dimen/_2sdp"
                    android:text="@string/street_address"
                    android:textColor="@color/desc_selected_bg"
                    android:textSize="@dimen/_12sdp" />

            <EditText
                    android:id="@+id/et_streetaddress1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/tv_last_name"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_feild_white"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

            <EditText
                    android:id="@+id/et_streetaddress2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/tv_last_name"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:background="@drawable/rectangle_feild_white"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1">

                    <TextView
                            android:id="@+id/tv_town"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/star"
                            android:drawablePadding="@dimen/_2sdp"
                            android:text="Town/City"
                            android:textColor="@color/desc_selected_bg"
                            android:textSize="@dimen/_12sdp" />

                    <EditText
                            android:id="@+id/et_town"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_below="@+id/tv_town"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/rectangle_feild_white"
                            android:padding="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1">

                    <TextView
                            android:id="@+id/tv_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/star"
                            android:drawablePadding="@dimen/_2sdp"
                            android:text="State"
                            android:textColor="@color/desc_selected_bg"
                            android:textSize="@dimen/_12sdp" />

                    <EditText
                            android:id="@+id/et_country"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_below="@+id/tv_state"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/rectangle_feild_white"
                            android:padding="@dimen/_5sdp"
                            android:text="West Bengal"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                </RelativeLayout>


            </LinearLayout>

            <TextView
                    android:id="@+id/tv_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawableRight="@drawable/star"
                    android:drawablePadding="@dimen/_2sdp"
                    android:text="@string/postcode"
                    android:textColor="@color/desc_selected_bg"
                    android:textSize="@dimen/_12sdp" />

            <EditText
                    android:id="@+id/et_post"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/tv_last_name"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_feild_white"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

            <CheckBox
                    android:id="@+id/chk_setdeafult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp"
                    android:button="@drawable/custom_checkbox"
                    android:text="  Set As Default"></CheckBox>

            <Button
                    android:id="@+id/btn_submitaddress"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_below="@+id/tv_total_price"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/rectangle_button_update_cart_"
                    android:text="SUBMIT"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"

                    />
        </LinearLayout>




    </LinearLayout>
    <TextView
            android:id="@+id/tv_seperator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/ll_add_address"
            android:background="@color/gray"
            android:layout_marginBottom="@dimen/_5sdp">

    </TextView>
    <LinearLayout
            android:id="@+id/ll_reclyerview"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
          android:layout_below="@+id/tv_seperator"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            >

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reclyerview_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>